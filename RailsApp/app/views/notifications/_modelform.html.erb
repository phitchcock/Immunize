<div class="form-group">
  <%= form_for(@n) do |f| %>
  <%= f.text_field :data, class: "form-control", placeholder: "Title" %>
</div>
<div class="form-group">
  <%= f.text_field :alert, class: "form-control", placeholder: "Message" %>
</div>
<div class="form-group">
  <%= f.submit 'Send', class: "btn btn-primary btn-block" %>
</div>
<% end %>
