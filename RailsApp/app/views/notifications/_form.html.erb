<div class="form-group">
  <%= form_tag "/notifications" do %>
  <%= text_field_tag :data, "", class: "form-control", placeholder: "Title" %>
</div>
<div class="form-group">
  <%= text_field_tag :alert, "", class: "form-control", placeholder: "Message" %>
</div>
<div class="form-group">
  <%= submit_tag 'Send', class: "btn btn-primary btn-block" %>
</div>
<% end %>
