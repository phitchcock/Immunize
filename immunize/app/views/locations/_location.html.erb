<% @locations.each do |location| %>
  <div class="list-group-item">
    <span>
      <p class="list-group-item img-thumbnail img-responsive", style="float:left"><%= image_tag location.image, height: "75", width: "100" %></p>
    </span>
    <span class="text-left padding-left-list" style="">
      <h4 class="list-group-item-heading"><%=link_to location.name, location, remote: true, data: { toggle: "modal", target: "#myModal-#{location.id}" } %></h4>
      <p class="list-group-item-text"><%= location.street_number %> <%= location.street_name %></p>
      <p class="list-group-item-text"><%= location.city %>, <%= location.state %> <%= location.zip %></p>
      <p class="list-group-item-text"><%#= location.date %></p>
      <p class="list-group-item-text">From <%#= location.time %></p>
    </span>
  </div>


  <%= render partial: "show", locals: { location: location }  %>
<% end %>


